
{
    "minio": {
        "id" : "",
        "key" : "",
        "skey": "",
        "endpoint_url": ""
    },
    "inputs": {
        "dataset_1" : [
            "klms-bucket/raw-data/abt.csv"	
        ],
        "dataset_2" : [
            "s3://klms-bucket/raw-data/buy.csv"	
        ],
        "ground_truth" : [
            "s3://klms-bucket/raw-data/gt.csv"
        ]
    },
    "parameters" : {
        "dataset_1" : {
            "separator" : "|",
            "id_column_name" : "id",
            "name" : "abt"                    
        },
        "dataset_2" : {
            "separator" : "|",
            "id_column_name" : "id",
            "name" : "buy"                    
        },
        "ground_truth" : {
            "separator" : "|"
        },                
        "workflow": "BlockingBasedWorkflow",
        "block_building": {
            "method" : "QGramsBlocking",
            "attributes_1": ["name"],
            "attributes_2": ["name"],              
            "params": {
                "qgrams" : 5
            }
        },
        "block_cleaning": {
            "method": "BlockFiltering",
            "params": {"ratio": 0.7}
        },
        "comparison_cleaning": {
            "method": "WeightedNodePruning"
        },
        "entity_matching": { 
            "method": "EntityMatching",
            "params": {
                "metric" : "dice",
                "tokenizer": "white_space_tokenizer"
            }
        },
        "clustering": {
            "method": "KiralyMSMApproximateClustering",
            "similarity_threshold": 0.2
        }
    }
}